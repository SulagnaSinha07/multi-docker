{

	"language": "generic",
	"AWSEBDockerrunVersion": 2,
	"containerDefinitions": [
		{
			"name": "client",
			"image": "sulagnasinha/multi-client",
			"hostname": "client",
			"essential": false,
			"memory": 200
		},
		{
			"name": "server",
			"image": "sulagnasinha/multi-server",
			"hostname": "api",
			"essential": false,
			"memory": 200
		},
		{
			"name": "worker",
			"image": "sulagnasinha/multi-worker",
			"hostname": "worker",
			"essential": false,
			"memory": 200
		},
		{
			"name": "nginx",
			"image": "sulagnasinha/multi-nginx",
			"hostname": "nginx",
			"essential": true,
			"memory": 200,
			"portMappings": [
				{
					"hostPort": 80,
					"containerPort": 80
				}],
			"links": ["client", "server"]
		}
	]
	
}